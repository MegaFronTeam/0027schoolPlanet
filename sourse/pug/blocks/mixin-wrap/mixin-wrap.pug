mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t, btns, ...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t
			if btns
				+e.row.row
					.col-auto
						+e.btn.btn.btn-outline-secondary.active(href='#') Все товары
					.col-auto
						+e.btn.btn.btn-outline-secondary(href='#') 
							+icon('kindergarten')
							| Для детского сада
					.col-auto
						+e.btn.btn.btn-outline-secondary(href='#') 
							+icon('book')
							| Для школы

mixin gallery-item(data)
	+b.gallery-item
		+e.full-size(data-src=`img/${data.imgLg}` data-fancybox=`gallery-${data.fancybox}`)
			+icon('fullscreen')
		+e.img-wrap
			.img-wrap-center
				+img(`img/${data.img}`, 'bg')
		+e.content
			.h4!= data.title
			+e.btn-wrap
				a(href='#').btn.btn-primary.btn-base подробнее

mixin news-item(data)
	+b.news-item
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${data.img}`, 'bg')
		+e.content
			+e.breadcrumbs
				+e.item(href='#') Новости
				+e.item.active!= data.item
			a.h4(href="#")!= data.title
			+e.date!= data.date
			+e.btn.btn.btn-outline-secondary.btn-base-secondary(href='#') Подробнее

