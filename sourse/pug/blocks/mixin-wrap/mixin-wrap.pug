mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Начните поиск в этой категории")
			button.btn.btn-primary
				+icon("search")
				| Найти

mixin page-head(t, btns, download, settings, caption, ...items)
	+b.page-head
		- let l = items.length
		.container
			if l > 0
				+breadcrumb('Главная',...items)

			h1= t
			if caption
				+e.caption-row.row
					.col-md
						+e.caption После оформления заказа с Вами свяжется менеджер для уточнения деталей отправки заказа и озвучит стоимость заказа.
					.col-md-auto
						+e.download(href='#')
							+img('img/svg/xls.svg')
							| Выгрузить в Excel
			if settings
				+e.settings
					+e.settings-row.row
						.col-12.order-xxl-1
							+search
						.col-auto.order-xxl-3
							+e.wrap
								+addblock
								span -
								+addblock
								span.d-none.d-md-block ₽
						.col-xxl-auto.order-xxl-2
							+e.choseCity 
								+icon('pin')
								| Выбрать регион
			if btns
				+e.row.row
					.col-sm-auto
						+e.btn.btn.btn-outline-secondary.active(href='#') Все товары
					.col-sm-auto
						+e.btn.btn.btn-outline-secondary(href='#') 
							+icon('kindergarten')
							| Для детского сада
					.col-sm-auto
						+e.btn.btn.btn-outline-secondary(href='#') 
							+icon('book')
							| Для школы
					if download
						.col-auto.ms-md-auto.ms-lg-0.ms-xl-auto 
							+e.download(href='#')
								+img('img/svg/xls.svg')
								| Выгрузить в Excel

mixin gallery-item(data)
	+b.gallery-item
		+e.full-size(data-src=`img/${data.imgLg}` data-fancybox=`gallery-${data.fancybox}`)
			+icon('fullscreen')
		+e.img-wrap
			.img-wrap-center
				+img(`img/${data.img}`, 'bg')
		+e.content
			.h4!= data.title
			+e.btn-wrap
				a(href='#').btn.btn-primary.btn-base подробнее

mixin news-item(data)
	+b.news-item
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${data.img}`, 'bg')
		+e.content
			+e.breadcrumbs
				+e.item(href='#') Новости
				+e.item.active!= data.item
			a.h4(href="#")!= data.title
			+e.date!= data.date
			+e.btn.btn.btn-outline-secondary.btn-base-secondary(href='#') Подробнее

