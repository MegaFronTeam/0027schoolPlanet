mixin product-item(img, title, city, price)
	+b.product-item
		+e.row.row
			.col-lg-auto
				+e.img-wrap(href="#")
					.img-wrap-center
						+img(`img/${img}`)
			.col 
				a.h4(href="#")!= title
				+e.inner-row.row
					.col-lg
						+e.provider
							| Поставщик: 
							| 
							span ООО “Адидас”
						+e.works Работает по условиям 44ФЗ и 223 ФЗ
						+e.shipment 
							| Отгрузка товара:
							| 
							span!= city
					.col-lg-auto
						+e.wrap.row
							.col-12.col-lg-auto
								+e.price
									| Опт: 
									span.num!= price
									span.delivery + доставка
							.col-auto
								+addblock()
							.col-auto
								+e.btn(href='#').btn.btn-primary.btn-base 
									+icon('cart')
									| В корзину
	// /.product-item

mixin sCatalog(isSecondVariant, isThirdVariant)
